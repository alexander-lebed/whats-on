{
  "name": "whatson",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint . && pnpm run types:check",
    "lint:fix": "eslint --fix . && prettier --write .",
    "types:check": "next typegen && tsc --noEmit",
    "types:generate": "sanity schema extract --enforce-required-fields --path=sanity/schema.json && sanity typegen generate && rm -f sanity/schema.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },

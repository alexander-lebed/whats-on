{
  "name": "whatson",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && pnpm run types:check",
    "lint:fix": "next lint --fix && prettier --write .",
    "types:check": "tsc",
    "types:generate": "sanity schema extract --enforce-required-fields --path=sanity/schema.json && sanity typegen generate && rm -f sanity/schema.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write ."
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@sanity/client": "^7.11.0",
    "@sanity/image-url": "^1.2.0",
    "@tanstack/react-query": "^5.75.7",
    "@tanstack/react-query-devtools": "^5.75.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "^15.4.6",
    "next-intl": "4.3.6",
    "next-sanity": "^10.0.16",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.28.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@sanity/vision": "^4.6.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.2.0",
    "sanity": "^4.6.1",
    "sanity-plugin-internationalized-array": "^3.1.5",
    "tailwindcss": "^4",
    "typescript": "^5.9.2"
  }
}
